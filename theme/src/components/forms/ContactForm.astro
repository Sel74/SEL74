---
import { Button, FormInput, FormSelect, FormTextarea } from '@littlesticks/odyssey-theme-components';

const selectOptions = [
  "Demande d'information",
  "Site internet (contenu)",
  "Site Internet (Technique)",
]

---

<form name="Contact Form" method="POST" action="https://annecy-sel74.communityforge.net/contact">
  <FormInput type="text" label="Nom" name="name" placeholder="John Doe" />
  <FormInput type="email" label="Email" name="mail" placeholder="hello@example.com" />
  <FormSelect label="How Did You Hear About Us?" options={selectOptions} name="cid"/>
  <FormTextarea label="Message" name="Message" placeholder="Your message here..." />
  <Button>Submit</Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>